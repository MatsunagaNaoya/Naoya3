<% provide(:title, 'タスク新規投稿') %>
<h1>タスク新規投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <% form_with(model: @task, url: user_tasks_path, local: true) do |f| %>
      
        <%= f.label :name, class: "label-form" %>
        <%= f.text_field :name, class: "form-control" %>
        
        <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
      <% end %>
  </div>
</div>
