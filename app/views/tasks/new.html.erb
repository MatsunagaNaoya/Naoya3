
<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">新規投稿</h1>
      <div class="col-md-8 col-md-offset-2">
        <%form_with(model:@task, url:user_tasks_path(@user, @task), local: true) do |f| %>
        
          <%= f.label :"名称", class: "label-form" %>
          <%= f.text_field :title, class: "form-control" %>
          
          <%= f.label :"詳細", class: "label-form" %>
          <%= f.text_area :note, rows: 5, class: "form-control" %>
          
          <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
          <% end %>
      </div>

  </div>
