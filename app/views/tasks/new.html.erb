<% provide(:title, 'New Task') %>

<h1>タスク新規投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model:@task, url:user_tasks_path(@user), local: true) do |f| %>

      <%= f.label :"タスク", class: "label-form" %>
      <%= f.text_field :comment, class: "form-control" %>

      <%= f.label :"内容", class: "label-form" %>
      <%= f.text_area :note, rows: 5, class: "form-control" %>

      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>
